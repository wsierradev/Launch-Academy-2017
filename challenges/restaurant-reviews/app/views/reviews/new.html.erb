<p id="notice"><%= notice %></p>

<%= form_for([@restaurant, @review]) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

<h1>Review Form for <%= @restaurant.name %></h1>

<%= form_for [@restaurant, @review] do |f| %>
  <%= f.label :rating %>
  <%= f.text_field :rating %>
  <br>
  <%= f.label :body, "Review" %>
  <%= f.text_field :body %>
  <br>
  <%= f.submit "Add Review" %>
<% end %>
